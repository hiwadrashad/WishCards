@model WishCards.Models.WishCardViewModel
@using WishCards.Enumerations 

@{
    ViewData["Title"] = "Create a Wishcard";
}

<h1>FillInData</h1>

<h4>Recipient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>@Html.Raw(Model.WishCard.Author)</h3>
            <div class="form-group">
                <label asp-for="RecipientsCommaSeparated" class="control-label"></label>
                <input id="RecipientsEmailBoxes" class="form-control" />
                <input asp-for="RecipientsCommaSeparated" type="hidden" />
                <span asp-validation-for="RecipientsCommaSeparated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishCard.Text" class="control-label"></label>
                @Html.TextArea("WishCard_Text", Model.Description, 5, 60, new { @class = "form-control", @onkeyup = "changeText();" })
                <span class="text-danger" asp-validation-for="WishCard.Text"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishCard.TypeFace"></label>
                @Html.DropDownListFor(x => Model.WishCard.TypeFace,
                                      new SelectList(Enum.GetNames(typeof(TypeFacesEnum))),
                                                     htmlAttributes: new { @class = "form-control", @onchange = "changeTypeFace();" })
                <span class="text-danger" asp-validation-for="WishCard.TypeFace"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishCard.TextColor"></label>
                @Html.DropDownListFor(x => Model.WishCard.TextColor,
                                      new SelectList(Enum.GetNames(typeof(ColorsEnum))),
                                                     htmlAttributes: new { @class = "form-control", @onchange = "changeTextColor();"})
                <span class="text-danger" asp-validation-for="WishCard.TypeFace"></span>
            </div>
            <div class="form-group">
                <label asp-for="WishCard.Background"></label>
                @Html.DropDownListFor(x => Model.WishCard.Background,
                                      Model.BackgroundSelectItems,
                                                     htmlAttributes: new { @class = "form-control", @onchange = "changeBackground();"})
                <span class="text-danger" asp-validation-for="WishCard.TypeFace"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="cold-md-6">
        <img id="render_background" src="~/backgrounds/@Model.ImageName" width="550" asp-append-version="true">
        <div id="render_text" class="type_Chopin" onload="changeText();">
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
